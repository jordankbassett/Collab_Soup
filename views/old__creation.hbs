<div class="container" id="createCon">
    <div class="box has-text-centered">
        <div class="columns is-centered">
            <div class="control has-icons-left">
                <input class="input is-large" id="accountUserName" type="name" 
                    placeholder="Username">
                <span class="icon is-medium is-left">
                    <i class="fas fa-user"></i>
                </span>
            </div>

        </div>
        </br>
        <div class="columns is-centered">
            <div class="control has-icons-left">
                <input class="input is-large" id="accountEmail" type="email" placeholder="Email">
                <span class="icon is-medium is-left">
                    <i class="fas fa-envelope"></i>
                </span>
            </div>
        </div>
        </br>
        <div class="columns is-centered">
            <div class="control has-icons-left">
                <input class="input is-large" id="emailConfirm" type="email" placeholder="Retype email">
                <span class="icon is-medium is-left">
                    <i class="fas fa-envelope"></i>
                </span>
            </div>
        </div>
        </br>
        <div class="columns is-centered">
            <div class="field">
                <p class="control has-icons-left">
                    <input class="input is-large" id="accountPassword" type="password" placeholder="Password">
                    <span class="icon is-large is-left">
                        <i class="fas fa-lock"></i>
                    </span>
                </p>
            </div>
        </div>
        </br>
        <div class="columns is-centered">
            <div class="field">
                <p class="control has-icons-left">
                    <input class="input is-large" id="passwordConfirm" type="password" placeholder="Retype password">
                    <span class="icon is-large is-left">
                        <i class="fas fa-lock"></i>
                    </span>
                </p>
            </div>
        </div>

        <div class="columns is-centered">
            <p id="accountConfirm" class="has-text-danger has-text-centered"></p>
        </div>

        <div class="columns">
            <div class="column">
                <button class="button is-success" id="accountCreate">Submit</button>
            </div>
        </div>
    </div>
</div>